# Server Configuration
PORT=3000
DEFAULT_CHAIN=solana-devnet
USE_KV=false

# Default recipient wallet (used for all chains unless chain-specific is set)
RECIPIENT_WALLET=your_wallet_address_here

# Chain-specific recipient wallets (optional)
# RECIPIENT_WALLET_SOLANA_DEVNET=your_solana_devnet_wallet
# RECIPIENT_WALLET_SOLANA_MAINNET=your_solana_mainnet_wallet
# RECIPIENT_WALLET_BASE=your_base_wallet
# RECIPIENT_WALLET_ETHEREUM=your_ethereum_wallet
# RECIPIENT_WALLET_ARBITRUM=your_arbitrum_wallet
# RECIPIENT_WALLET_POLYGON=your_polygon_wallet

# Pyth Configuration
PYTH_HERMES_URL=https://hermes.pyth.network

# Database (SQLite only, optional, defaults to ./sessions.db)
# DB_PATH=./sessions.db

# Vercel KV (for Vercel deployments)
# KV_REST_API_URL=your_kv_rest_api_url
# KV_REST_API_TOKEN=your_kv_rest_api_token
